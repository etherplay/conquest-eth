{
	"name": "@conquest-eth/tools",
	"version": "0.0.8",
	"description": "Tools for Conquest.eth, including mcp server",
	"author": "Ronan Sandford",
	"license": "MIT",
	"keywords": [
		"mcp",
		"ethereum",
		"tools",
		"cli",
		"conquest.eth"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/conquest-eth-for-lobsters",
		"directory": "lobsters/tools"
	},
	"homepage": "https://github.com/wighawag/conquest-eth-for-lobsters/blob/main/lobsters/tools/README.md",
	"bugs": {
		"url": "https://github.com/wighawag/conquest-eth-for-lobsters/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"conquest": "dist/cli.js"
	},
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"dependencies": {
		"@ethersproject/signing-key": "5.7.0",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"@noble/hashes": "^1.6.1",
		"@noble/secp256k1": "^2.1.0",
		"commander": "^14.0.3",
		"conquest-eth-v0-contracts": "workspace:*",
		"eip-1193": "^0.6.5",
		"ldenv": "^0.3.16",
		"remote-procedure-call": "^0.1.1",
		"tools-ethereum": "^0.0.8",
		"viem": "^2.45.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@modelcontextprotocol/inspector": "^0.19.0",
		"@rocketh/node": "^0.18.5",
		"@types/node": "^25.2.0",
		"as-soon": "^0.1.5",
		"prettier": "^3.8.0",
		"prool": "^0.2.2",
		"reloaderoo": "^1.1.5",
		"tsx": "^4.21.0",
		"typescript": "^5.3.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"prepublishOnly": "pnpm format:check && pnpm build",
		"release": "pnpm prepublishOnly && git push --all && pnpm changeset publish && git push --tags",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc",
		"dev": "as-soon -w src pnpm build",
		"test": "vitest run",
		"test:watch": "vitest",
		"mcp:inspector": "mcp-inspector",
		"reloaderoo": "reloaderoo",
		"start": "reloaderoo proxy --log-level debug -- node ./dist/cli.js --rpc-url http://localhost:8545 --game-contract 0x322813fd9a801c5507c9de605d63cea4f2ce6c44 mcp --ethereum"
	}
}
