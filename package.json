{
  "name": "conquest-eth",
  "version": "0.0.1",
  "description": "conquest.eth",
  "private": true,
  "volta": {
    "node": "20.18.1"
  },
  "pnpm": {
    "overrides": {
      "ipfs-http-client@34.0.0>concat-stream": "github:mihirgupta0900/concat-stream#master"
    },
    "patchedDependencies": {
      "reloaderoo": "patches/reloaderoo.patch"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "ldenv": "^0.3.16",
    "rimraf": "^6.1.2",
    "svelte": "^3.46.4",
    "wait-on": "^9.0.3",
    "zellij-launcher": "^0.0.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "cleandep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "---------------------- INSTALL ----------------------": "",
    "sync-deps": "syncpack fix-mismatches",
    "---------------------- FORMAT ----------------------": "",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "---------------------- EXTERNALS ----------------------": "externals",
    "externals": "docker compose -f dev/docker-compose-subgraph.yml down -v && docker compose -f dev/docker-compose-subgraph.yml up",
    "externals:down": "docker compose -f dev/docker-compose-subgraph.yml down -v",
    "---------------------- COMMON LIB ----------------------": "compile the common library",
    "common:dev": "pnpm run --filter ./common-lib dev",
    "common:build": "pnpm run --filter ./common-lib build",
    "---------------------- CONTRACTS ----------------------": "contracts compilation and deployment",
    "contracts:local_node": "ldenv pnpm run --filter ./contracts local_node",
    "contracts:deploy": "ldenv pnpm run --filter ./contracts deploy @@MODE @@",
    "contracts:test": "ldenv pnpm run --filter ./contracts test",
    "contracts:lint": "pnpm --filter ./contracts lint",
    "contracts:execute": "ldenv pnpm run --filter ./contracts execute @@MODE @@",
    "contracts:fork:execute": "ldenv pnpm run --filter ./contracts fork:execute @@MODE @@",
    "contracts:verify": "ldenv pnpm run --filter ./contracts verify @@MODE @@",
    "contracts:compile": "ldenv pnpm --filter ./contracts compile",
    "contracts:compile:watch": "ldenv pnpm --filter ./contracts compile:watch",
    "contracts:build": "ldenv pnpm --filter ./contracts compile ~~ pnpm --filter ./contracts typescript ~~",
    "contracts:export": "pnpm --filter ./contracts export @@MODE @@",
    "---------------------- TEST ----------------------": "",
    "test": "pnpm contracts:test",
    "---------------------- WEB ----------------------": "web client",
    "web:dev": "pnpm wait-on web/src/lib/contracts.json && ldenv pnpm --filter ./web dev",
    "web:build": "ldenv pnpm --filter ./web build @@",
    "web:serve": "ldenv pnpm --filter ./web serve",
    "zellij:web": "zellij-launcher --layout dev/zellij-web.kdl a web_$npm_package_name || zellij --layout dev/zellij-web.kdl -s web_$npm_package_name",
    "---------------------- DEPLOY ----------------------": "",
    "build": "ldenv --git -d localhost pnpm common:build ~~ pnpm contracts:build ~~ pnpm contracts:export @@MODE --json ../web/src/lib/contracts.json ~~ pnpm web:build @@MODE ~~ @@",
    "serve": "pnpm run --filter ./web serve",
    "----------------------- SUBGRAPH ----------------------": "subgraph",
    "subgraph:generate:codegen": "ldenv pnpm run --filter ./subgraph generate:codegen @@MODE @@",
    "subgraph:deploy": "ldenv pnpm run --filter ./subgraph deploy:build @@MODE @@",
    "subgraph:deploy:local:watch": "ldenv pnpm run --filter ./subgraph deploy:local:watch",
    "subgraph:schema:watch": "ldenv pnpm run --filter ./subgraph schema:watch",
    "----------------------- HELPER SERVICES ----------------------": "helper services",
    "fuzd:dev": "pnpm --filter ./helper-services/fuzd dev",
    "sync:dev": "pnpm --filter ./helper-services/secp256k1-db dev",
    "missiv:dev": "pnpm --filter ./helper-services/missiv dev",
    "---------------------- WEB USING EXISTING DEPLOYMENT ----------------------": "",
    "zellij-attach": "zellij-launcher a $npm_package_name-attach-$MODE || zellij -n dev/zellij-attach.kdl -s $npm_package_name-attach-$MODE",
    "attach": "ldenv -d localhost pnpm contracts:export @@MODE ~~ pnpm run zellij-attach ~~ @@",
    "---------------------- FULL AGAINST AN EXISTING NETWORK WITH LOCAL SERVICES ----------------------": "",
    "zellij-remote-chain": "zellij-launcher a $npm_package_name-remote-chain-$MODE || zellij -n dev/zellij-remote-chain.kdl -s $npm_package_name-remote-chain-$MODE",
    "remote-chain": "ldenv -d localhost pnpm run zellij-remote-chain @@",
    "---------------------- FULL AGAINST AN EXISTING NETWORK + SERVICES ----------------------": "",
    "zellij-remote": "zellij-launcher a $npm_package_name-remote-$MODE || zellij -n dev/zellij-remote.kdl -s $npm_package_name-remote-$MODE",
    "remote": "ldenv -d localhost pnpm run zellij-remote @@",
    "---------------------- RUN FULL LOCAL SETUP ----------------------": "",
    "stop": "zellij kill-session $npm_package_name",
    "start:pnpm": "pnpm -r dev",
    "start": "zellij-launcher a $npm_package_name || ldenv -d localhost zellij -n dev/zellij.kdl -s $npm_package_name"
  }
}
