layout {
	pane split_direction="vertical" {
		
	}
	pane split_direction="vertical" {
		pane name="web" command="pnpm"  {
			args "web:dev"
		}
		pane name="COMMON" command="pnpm"  {
			args "common:dev"
		}
		// pane name="svelte-check" command="pnpm"  {
		// 	args "--filter" "./web" "check:watch"
		// }
	}
	pane split_direction="vertical" {
		pane name="local node" command="pnpm"  {
			args "--filter" "./helper-services/ethereum-node" "local_node"
		}
		pane name="watch and compile" command="pnpm"  {
			args "--filter" "./contracts" "compile:watch"
		}
		pane name="watch and deploy" command="pnpm"  {
			args "--filter" "./contracts" "deploy:watch" "localhost" "--json" "../web/src/lib/contracts.json"
		}
		pane name="watch and build typescript" command="pnpm"  {
			args "--filter" "./contracts" "typescript:watch"
		}
	}
	pane name="helper-services"  split_direction="vertical" {
		pane name="FUZD"  command="pnpm"  {
			args "fuzd:dev"
		}
		pane name="SYNC"  command="pnpm"  {
			args "sync:dev"
		}
		pane name="MISSIV"  command="pnpm"  {
			args "missiv:dev"
		}
	}
	pane name="externals"  split_direction="vertical" {
		pane name="EXTERNAL"  command="pnpm"  {
			args "externals"
		}
		pane name="SUBGRAPH DEPLOY"  command="pnpm"  {
			args "subgraph:deploy:local:watch"
		}
		pane name="SUBGRAPH SCHEMA"  command="pnpm"  {
			args "subgraph:schema:watch"
		}
	}

}
