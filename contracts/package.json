{
  "name": "conquest-eth-v0-contracts",
  "version": "0.0.0",
  "description": "conquest-eth v0 ethereum smart contracts",
  "type": "module",
  "exports": {
    "./deploy/*": "./dist/deploy/*",
    "./rocketh/*": "./dist/rocketh/*",
    "./artifacts/*": "./dist/generated/artifacts/*",
    "./abis/*": "./dist/generated/abis/*",
    "./deployments/*": "./deployments/*",
    "./src/*": "./src/*",
    ".": {
      "import": "./dist/js/index.js",
      "types": "./dist/js/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "deployments"
  ],
  "engines": {
    "node": ">= 22.0.0"
  },
  "volta": {
    "node": "22.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-keystore": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.8",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@rocketh/deploy": "^0.18.0",
    "@rocketh/diamond": "^0.18.0",
    "@rocketh/export": "^0.18.0",
    "@rocketh/node": "^0.18.0",
    "@rocketh/proxy": "^0.18.0",
    "@rocketh/read-execute": "^0.18.0",
    "@rocketh/signer": "^0.18.0",
    "@rocketh/viem": "^0.18.0",
    "@types/chai": "^4.3.0",
    "@types/csv-parse": "^1.2.5",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^22.0.0",
    "@types/progress": "^2.0.5",
    "@types/qrcode": "1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "as-soon": "^0.1.5",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "cross-var": "^1.1.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.0.0",
    "earl": "^2.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-transfer-gateway": "^0.1.0-beta.9",
    "fs-extra": "^10.0.1",
    "hardhat": "^3.1.5",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^2.0.0-next.74",
    "ldenv": "^0.3.16",
    "prettier": "^3.8.0",
    "prettier-plugin-solidity": "^2.2.1",
    "progress": "^2.0.3",
    "qrcode": "^1.5.0",
    "rocketh": "^0.18.0",
    "slippy": "^0.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.6.2",
    "viem": "^2.45.0",
    "wait-on": "^9.0.3",
    "zellij-launcher": "^0.0.1"
  },
  "scripts": {
    "---------------------- INTERNAL ----------------------": "",
    ":deploy+export": "cross-var pnpm hardhat --network $MODE deploy --skip-prompts && cross-var rocketh-export -e $MODE",
    "---------------------- DEV ---------------------- ": "",
    "old:local_node": "ldenv -d localhost hardhat node",
    "local_node": "anvil",
    "compile": "hardhat compile",
    "compile:watch": "as-soon -w src pnpm compile",
    "fork:execute": "ldenv tsx @=HARDHAT_FORK=@@MODE @@",
    "fork:deploy": "pnpm compile --build-profile production && ldenv hardhat @=HARDHAT_FORK=@@MODE deploy @@",
    "deploy:dev": "ldenv --verbose -d localhost pnpm :deploy+export @@",
    "deploy:watch": "wait-on ./generated && ldenv --verbose -m localhost pnpm as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
    "test": "hardhat test",
    "test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
    "typescript:watch": "as-soon -w js pnpm typescript",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "slippy src/**/*.sol",
    "---------------------- PRODUCTION ---------------------- ": "",
    "docgen": "ldenv -m default pnpm run deploy @@MODE --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -e @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
    "execute": "ldenv -n HARDHAT_NETWORK tsx @@",
    "deploy": "pnpm compile --build-profile production && ldenv hardhat --network @@MODE deploy @@",
    "verify": "ldenv rocketh-verify -e @@MODE @@",
    "export": "ldenv --verbose rocketh-export -e @@MODE @@",
    "typescript": "tsc",
    "---------------------- START ---------------------- ": "",
    "stop": "zellij kill-session $npm_package_name",
    "start": "zellij-launcher a $npm_package_name || zellij -n zellij.kdl -s $npm_package_name"
  }
}
