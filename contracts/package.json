{
  "name": "conquest-eth-contracts",
  "version": "0.1.1",
  "description": "conquest-eth ethereum smart contracts",
  "private": true,
  "type": "module",
  "files": [
    "export/artifacts/",
    "export/deployments/",
    "export/deploy_l2/",
    "export/utils/",
    "src/outerspace/interfaces/",
    "src/outerspace/events/ImportingOuterSpaceEvents.sol",
    "src/outerspace/types/ImportingOuterSpaceTypes.sol"
  ],
  "engines": {
    "node": ">= 22.0.0"
  },
  "volta": {
    "node": "22.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.8",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@rocketh/deploy": "^0.17.9",
    "@rocketh/node": "^0.17.18",
    "@rocketh/proxy": "^0.17.13",
    "@rocketh/read-execute": "^0.17.9",
    "@rocketh/signer": "^0.17.9",
    "@types/chai": "^4.3.0",
    "@types/csv-parse": "^1.2.5",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^22.0.0",
    "@types/progress": "^2.0.5",
    "@types/qrcode": "1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "conquest-eth-common": "workspace:*",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.0.0",
    "earl": "^2.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-transfer-gateway": "^0.1.0-beta.9",
    "fs-extra": "^10.0.1",
    "hardhat": "^3.1.5",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^2.0.0-next.66",
    "hardhat-gas-reporter": "^1.0.8",
    "isomorphic-unfetch": "^3.1.0",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "progress": "^2.0.3",
    "qrcode": "^1.5.0",
    "rocketh": "^0.17.15",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.6.0",
    "typescript": "^5.6.2",
    "viem": "^2.45.0"
  },
  "scripts": {
    "prepare": "node ./.setup.js",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --plugin-search-dir=. --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --plugin-search-dir=. --write \"**/*.{ts,js,sol}\"",
    "compile": "hardhat compile",
    "compile:watch": "as-soon -w src pnpm compile",
    "test": "hardhat test",
    "test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "local_node": "cross-env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0",
    "dev": "cross-env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0 --watch",
    "local:dev": "hardhat --network localhost deploy --watch",
    "deploy:dev": "hardhat --network localhost deploy --report-gas",
    "deploy:watch": "wait-on ./generated && hardhat --network localhost deploy --watch",
    "deploy": "pnpm compile --build-profile production && hardhat deploy",
    "verify": "rocketh-verify",
    "export": "rocketh-export",
    "metadata": "hardhat export-metadata",
    "typescript": "tsc",
    "fork:execute": "cross-env HARDHAT_FORK=@@MODE tsx @@",
    "fork:deploy": "cross-env HARDHAT_FORK=@@MODE pnpm compile --build-profile production && hardhat deploy --report-gas @@",
    "fork:dev": "cross-env HARDHAT_FORK=@@MODE hardhat node --hostname 0.0.0.0 --watch",
    "fork:node": "cross-env HARDHAT_FORK=@@MODE hardhat node --hostname 0.0.0.0",
    "fork:test": "cross-env HARDHAT_FORK=@@MODE hardhat test",
    "execute": "cross-env HARDHAT_NETWORK=@@MODE tsx @@"
  }
}
